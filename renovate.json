{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "customManagers": [
        {
            "managerFilePatterns": [
                "/(^|/)argfile/"
            ],
            "customType": "regex",
            "datasourceTemplate": "docker",
            "matchStrings": [
                "IMAGE=(?<depName>[\\w\\.\\/-]+):?(?<currentValue>[\\w\\.-]+)?@(?<currentDigest>sha256:[a-f0-9]+)"
            ],
            "versioningTemplate": "docker"
        },
        {
            "managerFilePatterns": [
                "/(^|/)argfile/"
            ],
            "customType": "regex",
            "datasourceTemplate": "npm",
            "depNameTemplate": "@yarnpkg/cli-dist",
            "matchStrings": [
                "YARN_PKG=yarnpkg-cli-dist-(?<currentValue>[\\d\\.]+)\\.tgz"
            ]
        }
    ],
    "tekton": {
        "automerge": true
    },
    "packageRules": [
        {
            "matchPackageNames": ["yarn", "@yarnpkg/cli-dist"],
            "matchUpdateTypes": ["major"],
            "enabled": false
        },
        {
            "matchPackageNames": ["/registry.access.redhat.com\\/ubi9\\/nodejs-\\d+-minimal/"],
            "matchUpdateTypes": ["digest"],
            "automerge": true
        },
        {
            "matchPackageNames": ["@yarnpkg/cli-dist"],
            "groupName": "yarnpkg cli-dist",
            "semanticCommitType": "chore"
        }
    ]
}
