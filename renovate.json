{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "group:allNonMajor"
    ],
    "customManagers": [
        {
            "managerFilePatterns": [
                "/(^|/)argfile/"
            ],
            "customType": "regex",
            "datasourceTemplate": "docker",
            "matchStrings": [
                "(?<depName>[\\w\\.\\/]+):?(?<currentValue>[\\w]+)?@(?<currentDigest>sha256:[a-f0-9]+)"
            ],
            "versioningTemplate": "docker"
        }
    ],
    "tekton": {
        "automerge": true
    }
}
